<Window x:Class="ITC.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITC.GUI"
        mc:Ignorable="d"
        Title="Income Tax Calculator" Height="350" Width="500">
    <Grid>
        <Label Content="Gross Annual Salary:" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <TextBox Name="tInput" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <Button Name="bCalculate" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Calcualte" Click="bCalculate_Click" Width="100" Height="30" Margin="0,10,10,0"></Button>
        <TextBlock Name="tbResult" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Height="249" Width="480" Margin="10,0,0,10"/>
    </Grid>
</Window>
